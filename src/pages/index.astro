<style>
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
img {
  display: block;
  width: 100%;
  height: auto;
}
.vinylunivers {
  background-color: #CFDBF1;
  margin: 3rem auto; 
  max-width: 350px;
  padding: 2rem; 
  padding-left: 2rem;
  padding-right: 2rem;
}
.vinylunivers h2 {
  margin-bottom: 1rem;
}

.vinylunivers p {
  margin-bottom: 2.5rem;
  font-size: 1.1rem;
}

.vinylunivers img {
  max-width: 70px;
  margin: auto;
}
.plader{
max-width: 500px;
margin: auto;
}


.livemusik{
background-color: #CFDBF1;
  margin: 3rem auto; 
  max-width: 350px;
  padding: 2rem; 
  padding-left: 2rem;
  padding-right: 2rem;	
}
.livemusik h2 {
  margin-bottom: 1rem;
}

.livemusik p {
  margin-bottom: 2.5rem;
  font-size: 1.1rem;
}

.livemusik img {
  max-width: 70px;
  margin: auto;
}
.pladergrid{
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 30px;
	margin-top: 1rem;
	margin-left: 1rem;
	margin-right: 1rem;
}
.udvalgte{
	margin-left: 1rem;
}

.album{
	padding-top: 0.5rem;
	font-size: 1.4rem;
}
.kategori{
	padding-top: 0.5rem;
	font-size: 1.1rem;
}
.kunstner{
	padding-top: 0.1rem;
	font-size: 1.1rem;
}
.pris{
	padding-top: 0.5rem;
	font-size: 1.6rem;
}
@media (max-width: 800px) {
	.storskaermlayout{
		display: none;
	}
}

@media (min-width: 800px) {

  .pladergrid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
  }
.lilleskaemlayout{
	display: none;
}
.storskaermlayout{
	display: grid;
	grid-template-columns: 1fr 1fr 1fr;
	position: relative;
	margin-bottom: 12rem;
}
.plader{
max-width: 100%;
grid-column: 1/3;
margin-top: 3rem;
margin-left: 3rem;

}
.vinylunivers{
	position: absolute;
	max-width: 520px;
	grid-column: 2/4;
	top:25%;
	left: 25%;
	margin-right: 3.5rem;

}
.livemusikbillede{
	max-width: 100%;
	grid-row: 2/4;
	grid-column: 2/4;
	margin-top: 15rem;
	padding-right: 3rem;

}

.livemusik{
	position: absolute;
	max-width: 520px;
	margin-left: 3.5rem;
top: 20%;
right: 47%;
grid-column: 1/4;
grid-row: 3/4;
margin-top: 8rem;

}

}
@media (min-width: 800px) and (max-width: 1000px) {
  .vinylunivers {
    top: 10%;
  }

  .livemusik {
    top: -15%;
  }
}


</style>
</Layout>